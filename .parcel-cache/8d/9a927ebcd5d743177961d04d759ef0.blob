* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
*::after,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
#canvas {
  /*height: 100vh;
    width: 100vw;
    vh/vw 宽高和屏幕一样*/
  display: block;
  min-width: 90vw;
  min-height: 90vh;
  box-shadow: 0px 1px 2px 0px #0f0d0d;
}
ul,
ol {
}

main {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}

.drawTool {
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  height: 30px;
}
.drawWidth{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;

}

.drawWidth:hover .width{
  display: block;
  position: absolute;
  top: 30px;

}
.width{
  display: none;
}
.drawColor {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}
.drawColor:hover .color{
  display: block;
  position: absolute;
  top: 30px;
  
}
.color {
  display: none;
  /* transition: all 10s ease 10s; */
}
.color:hover{
  /* top: 18px; */
  /* transition: all 10s ease 10s; */


} 
.color li:hover{
   display: block;
}
.colorItem {
  width: 20px;
  height: 20px;
  box-shadow: inset 0px 0px 4px 1px #afa0a0;
  border-radius: 25px;
  margin-bottom: 4px;

}
.widthItem{
  width: 30px;
  height: 30px;
  background-color: black;
  box-shadow: inset 0px 0px 4px 1px #afa0a0;
  border-radius: 25px;
  margin-bottom: 4px;
  font-size: 2px;
  color: white;
  text-align: center;
  /* line-height: center; */
  
    
}
li {
  list-style: none;
}

